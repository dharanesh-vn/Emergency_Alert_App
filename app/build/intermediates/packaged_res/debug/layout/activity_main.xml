<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, User!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Normal"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_emergency_mode"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="ACTIVATE EMERGENCY MODE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Emergency Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_sos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SOS"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF5252"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_call_emergency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Call Emergency"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6E40" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_safety_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Safety Tips"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile &amp; Theme Settings"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Contacts"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Location Tracking"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Calculators"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_web_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Information Online"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_image_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Image Capture &amp; Edit"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
